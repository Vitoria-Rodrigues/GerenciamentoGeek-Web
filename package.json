{
  "name": "@ggeek/mentoring-monorepo",
  "version": "1.0.0",
  "author": "Vit√≥ria Rodrigues Ferreira",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev -w @ggeek/frontend",
    "build:frontend": "npm run build -w @ggeek/frontend",
    "front:preview": "npm run preview -w @ggeek/frontend",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f",
    "db:clean": "docker compose down --volumes",
    "db:reset": "npm run db:clean && npm run db:up"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
